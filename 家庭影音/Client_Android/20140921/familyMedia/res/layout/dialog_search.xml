<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout
        android:id="@+id/searchL1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        
        android:gravity="center_vertical" >
        <ImageButton
            android:id="@+id/search_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" 
            android:background="@drawable/search_back_imgbtn_click"
            android:src="@drawable/blank"/>
        <LinearLayout
            android:id="@+id/searchL2"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" 
            >

       <EditText
           android:id="@+id/search_txtKeywords"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:background="@drawable/edittext"
           android:ellipsize="end"
           android:focusable="true"
           android:focusableInTouchMode="true"
           android:hint="请输入关键词"
           android:imeOptions="actionDone"
           android:maxLength="25"
           android:maxLines="1"
           android:paddingLeft="3dip"
           android:singleLine="true" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/search_btnSearch"
            android:background="@drawable/search_imgbtn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
</LinearLayout>
